{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <form method="post">
        <div class="container mt-3">
            <div class="row">
                <div class="col-4">

                </div>
                <div class="col-4">
                    <h1 class="titre text-center">Connexion</h1>
                </div>
                <div class="col-4">

                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <label for="inputEmail">Email:</label>
                    <input class="form-control" type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus/>
                </div>
                <div class="col-6">
                    <label for="inputPassword">Password:</label>
                    <input class="form-control" type="password" name="password" id="inputPassword" autocomplete="current-password" required/>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-3">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <input type="hidden" name="_target_path" value="/">
                    <button class="btn btn-primary" type="submit">login</button>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
